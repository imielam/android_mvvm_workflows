<LinearLayout android:id="@+id/repository_list_container"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="mobilehexers.eu.driversweek.repository.RepositoryActivity">

    <EditText
        android:id="@+id/repository_list_filter_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="@string/filter.repository.data"
        tools:text="@string/filter.repository.data" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/repository_list_details_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/enter.repository.details" />

        <CheckBox
            android:id="@+id/repository_list_limit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/limit.repository.data" />

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/repository_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
